<% provide(:title, 'Sign-in') %>

<div class(:error)></div>

<h1>Admin Sign-in</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :username %>
      <%= f.text_field :username %>

      <%= f.label :password %>
      <%= f.password_field :password %>
      
      <p>

      <%= f.submit "Sign-in", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>